<div>
    <div>
        <img src="@ImagePath" alt="Picture of @Name" style="max-width: 100%; height: 40vh; width: auto; border: 2px solid black;
                    border-radius: 10px;" />
    </div>
    <div class="text-center">
        <h4 class="text-center">@Name</h4>
        <i>@((MarkupString)Title)</i>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public string Name { get; set; } = null!;
    
    [Parameter, EditorRequired] public string ImagePath { get; set; } = null!;

    [Parameter, EditorRequired] public string Title { get; set; } = null!;
}